@using MVCProject.Entities.Enums;
@model StorageVM
<script src="~/js/Storage.js" asp-append-version="true"></script>
@{
    if (Model.Storages != null)
    {
        foreach (var storage in Model.Storages)
        {
            <div class="card-columns">
                <div class="card border-0 pt-4">
                    <div class="card-body border border-5 border-warning rounded-pill">
                        <div class="d-flex justify-content-between px-3">
                            <div class="d-flex align-items-center justify-content-center fs-3">
                                <strong>@storage.StorageName</strong>
                            </div>
                            <div class="d-flex align-items-center justify-content-center fs-5">
                                #@storage.Id
                            </div>

                            @if (Model.EmployeeType == EmployeeType.Admin)
                            {
                                <div>
                                    <a class="btn btn-secondary me-2">Manage</a>

                                </div>
                            }
                            else
                            {

                                <div>
                                    <a class="btn btn-secondary me-2">Edit</a>

                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center">
            <h3> <strong>List not found!</strong></h3>
        </div>
    }
}
