@model EmployeeRegisterVM

<fieldset>
    <div class="form-card">
        <h2 class="fs-title">Administrator Information</h2>
        <p>You have to add one administrator for your company. </p>
        <div class="control-group">
            <input id="email" type="email" asp-for="Mail" placeholder="Enter administrator email address for login id."  />
            <label for="email">Email</label>
            <span asp-validation-for="Mail"></span>
        </div>
        <div class="control-group">
            <input id="firstname" type="text" asp-for="FirstName" placeholder="Enter administrator first name." />
            <label for="firstname">First Name</label>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="control-group">
            <input id="lastname" type="text" asp-for="LastName" placeholder="Enter administrator last name."  />
            <label for="lastname">Last Name</label>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="control-group">
            <input id="password" type="password" asp-for="Password" placeholder="Enter administrator password."  />
            <label for="password">Password</label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="control-group">
            <input id="confirmpassword" type="password" asp-for="PasswordConfirm" placeholder="Confirm password."/>
            <label for="confirmpassword">Confirm Password</label>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div class="control-group">
            <input id="birthDate" type="date" asp-for="BirthDate" style=" color:#8c8c8c;font-weight: normal;" placeholder="Enter administrator birth date."  />
            <label for="birthDate">Birth Date</label>
            <span asp-validation-for="BirthDate"></span>
        </div>
        <div class="control-group">
            <input id="admintel" type="tel" asp-for="Phone" placeholder="Enter administrator contact no." />
            <label for="admintel">Phone</label>
            <span asp-validation-for="Phone"></span>
        </div>

    </div>
    <a  disabled name="Create" class="btn btn-primary mx-4 next action-button" value="Create" id="employeeNextButton" onclick="CreateEmployee()" />
</fieldset>

<script src="~/js/management.js" asp-append-version="true"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


